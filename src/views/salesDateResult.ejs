    <header id="header_container" class="header_container"></header>

    <h1 class="title_web">Busqueda Exitosa</h1>

    <% let conteo=0; let costo=0; let venta=0; let utilidad=0; let cantidadSuma=0; %>

    <section class="salesResults">
      <div class="titles_container">
        <div id="mostrarConteo" class="title ancho"></div>
        <div class="title"></div>
        <div class="title"></div>
        <div id="mostrarPrendas" class="title ancho"></div>
