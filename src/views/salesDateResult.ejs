        <div id="mostrarVenta" class="title ancho"></div>
        <div id="mostrarUtilidad" class="title ancho"></div>
        <div class="title"></div>
      </div>

      <div class="titles_container">
        <div class="title"><strong>Ventas</strong></div>
        <div class="title"><strong>Referencia</strong></div>
        <div class="title"><strong>Descripcion</strong></div>
        <div class="title"><strong>Cantidad</strong></div>
        <div class="title"><strong>Precio</strong></div>
        <div class="title"><strong>Costo</strong></div>
        <div class="title"><strong>Venta</strong></div>
        <div class="title"><strong>Utilidad</strong></div>
        <div class="title"><strong>Registrado</strong></div>
      </div>

      <div class="data_container">
        <% salesDate.map((indice) => { %>
        <div class="registro">
          <div class="data"><%= indice.id_sale %></div>
          <div class="data"><%= indice.reference %></div>
          <div class="data"><%= indice.description %></div>
          <div class="data"><%= indice.cantidad_total %></div>
          <div class="data"><%= indice.price %></div>
          <div class="data"><%= indice.costo_total %></div>
          <div class="data"><%= indice.venta_total %></div>
          <div class="data"><strong><%= indice.utilidad_total %></strong></div>
          <div class="data"><%= indice.registered.toDateString() %></div>

          <% conteo += indice.conteo %> <% costo += indice.costo_total %> <%
          venta += indice.venta_total %> <% utilidad += indice.utilidad_total %>
          <% cantidadSuma += indice.cantidad_total%>
        </div>

        <% }) %>
      </div>

      <div id="ocultarConteo"><%= conteo %></div>
      <div id="ocultarCosto"><%= costo %></div>
      <div id="ocultarPrendas"><%= cantidadSuma %></div>
      <div id="ocultarVenta"><%= venta %></div>
      <div id="ocultarUtilidad"><%= utilidad %></div>
    </section>

